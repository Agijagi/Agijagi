<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_product_detail_floor_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:text="@string/productdetail_custom_floor_plan"
        android:textAppearance="@style/title_bold_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_custom_product_detail_download_floor_plan"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:background="@drawable/wide_box_rounded_button_stroke"
        android:text="@string/productdetail_custom_download"
        android:textAppearance="@style/body_regular_12"
        android:textColor="@color/jagi_ivory"
        app:layout_constraintBottom_toBottomOf="@id/textview_product_detail_floor_plan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textview_product_detail_floor_plan" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        android:text="@string/productdetail_custom_info"
        android:textAlignment="center"
        android:textAppearance="@style/body_regular_12"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_custom_product_detail_download_floor_plan" />

</androidx.constraintlayout.widget.ConstraintLayout>