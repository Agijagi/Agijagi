<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_productlist_shimmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/jagi_brown">

        <ImageView
            android:id="@+id/imageview_productlist_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/product_item_default_image_length" />

    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/button_productlist_shimmer_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/favorite_pressed_button"
        app:layout_constraintBottom_toBottomOf="@id/cardview_productlist_shimmer"
        app:layout_constraintEnd_toEndOf="@id/cardview_productlist_shimmer" />

    <TextView
        android:id="@+id/textview_productlist_shimmer_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/shimmer_color"
        android:text="브랜드명"
        android:textAppearance="@style/body_regular_10"
        android:textColor="@color/transparency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_productlist_shimmer" />

    <TextView
        android:id="@+id/textview_productlist_shimmer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@color/shimmer_color"
        android:text="제품명 도자기"
        android:textAppearance="@style/body_regular_12"
        android:textColor="@color/transparency"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_productlist_shimmer_brand" />

    <TextView
        android:id="@+id/textview_productlist_shimmer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:background="@color/shimmer_color"
        android:text="100000원"
        android:textAppearance="@style/body_regular_11"
        android:textColor="@color/transparency"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_productlist_shimmer_name" />

</androidx.constraintlayout.widget.ConstraintLayout>