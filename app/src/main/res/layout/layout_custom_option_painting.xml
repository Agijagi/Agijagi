<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textview_custom_option_painting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/custom_option_painting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@style/title_bold_16" />

    <include
        android:id="@+id/include_custom_option_painting_image1"
        layout="@layout/item_custom_option_painting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/include_custom_option_painting_image2"
        app:layout_constraintBottom_toTopOf="@id/include_custom_option_painting_image3"
        app:layout_constraintTop_toBottomOf="@id/textview_custom_option_painting" />

    <include
        android:id="@+id/include_custom_option_painting_image2"
        layout="@layout/item_custom_option_painting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/include_custom_option_painting_image1"
        app:layout_constraintStart_toEndOf="@id/include_custom_option_painting_image1"
        app:layout_constraintTop_toTopOf="@id/include_custom_option_painting_image1" />

    <include
        android:id="@+id/include_custom_option_painting_image3"
        layout="@layout/item_custom_option_painting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/include_custom_option_painting_image4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_custom_option_painting_image1" />

    <include
        android:id="@+id/include_custom_option_painting_image4"
        layout="@layout/item_custom_option_painting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/include_custom_option_painting_image3"
        app:layout_constraintTop_toTopOf="@id/include_custom_option_painting_image3" />

</androidx.constraintlayout.widget.ConstraintLayout>