<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:background="@drawable/recent_search_box_background"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textview_recent_searches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="최근검색어"
        android:textAppearance="@style/body_regular_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagebutton_recent_searches_delete"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:backgroundTint="@color/transparency"
        android:contentDescription="최근 검색어 삭제 아이콘"
        android:src="@drawable/close_18px"
        app:layout_constraintBottom_toBottomOf="@id/textview_recent_searches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_recent_searches"
        app:layout_constraintTop_toTopOf="@id/textview_recent_searches" />

</androidx.constraintlayout.widget.ConstraintLayout>
